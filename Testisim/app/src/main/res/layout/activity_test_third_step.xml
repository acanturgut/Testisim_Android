<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activities.test.TestInformationActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/testThirdStepBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15.4sp"
            android:textColor="#9b9b9b"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="3. ADIM"
            />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/testThirdStepStopSpeakingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="16dp"
            app:srcCompat="@drawable/voice" />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:textColor="#b06ed7"
        android:layout_marginBottom="16dp"
        android:textSize="23sp"
        android:textStyle="bold"
        android:text="Epididimi kontrol edin." />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/test_3" />

    <TextView
        android:id="@+id/testThirdStepFirstText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:textColor="#529cd0"
        android:textSize="12.4sp"
        android:text="Spermi taşıyan ve biriktiren yumuşak ve kanallı bir yapı olan epididimi bulun. Burada ele gelen kitle/yumru olup olmadığını kontrol edin." />


    <TextView
        android:id="@+id/testThirdStepSecondText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:textColor="#111"
        android:textSize="12.4sp"
        android:text="Epididim küçük yumrular gibi hissedilebilir, bunlar anormal yumrular ile karıştırılmaktadır. Sizin bu yumrular ile ilgili bir endişeniz olur ise bir hekime danışın." />

    <TextView
        android:id="@+id/testThirdStepCompleteTest"
        android:layout_marginBottom="20dp"
        android:layout_gravity="end"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:layout_width="180dp"
        android:background="@drawable/corner_radius_gradient_button"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="16.3sp"
        android:textColor="@color/white"
        android:text="Testi Tamamla &gt;" />

</LinearLayout>