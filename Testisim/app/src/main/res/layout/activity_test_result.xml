<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.test.TestResultActivity">

    <android.support.v7.widget.AppCompatImageView
        app:srcCompat="@drawable/cool_background_ender"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="TESTİ BİTİRDİNİZ"
                android:textColor="#9b9b9b"
                android:textSize="15.4sp" />

        </FrameLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/testResultIcon"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/yes"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/testResultText"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17.3sp"
            android:textColor="#4a4a4a"
            android:gravity="center_horizontal"
            android:text="1 Ay sonra görüşmek üzere :)"
            />

        <TextView
            android:id="@+id/testResultGoBackMenuButton"
            android:layout_marginBottom="20dp"
            android:layout_gravity="end"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp"
            android:layout_width="160dp"
            android:background="@drawable/corner_radius_gradient_button"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="16.3sp"
            android:textColor="@color/white"
            android:text="ANA EKRAN >" />


    </LinearLayout>

</FrameLayout>